<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/about" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/backButton" android:background="@drawable/ic_arrow_back_black_24dp" android:layout_width="50dp" android:layout_height="35dp" android:layout_margin="15dp" android:onClick="goBack" android:layout_alignParentStart="true"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/gv" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="200dp" android:layout_marginBottom="8dp" android:text="Game version 1.0" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/date" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Created on 30-jul-2019" android:layout_below="@+id/gv" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/by" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="This game has been created by Shaurya Nagpal" android:layout_below="@+id/date" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/rights" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="All rights reserved" android:layout_below="@+id/by" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/num" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="+91-8383082840" android:layout_below="@+id/rights" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView android:textSize="18sp" android:textColor="#817c7c" android:id="@+id/email" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="shauryanagpal1998@gmail.com" android:layout_below="@+id/num" android:layout_centerHorizontal="true" android:fontFamily="monospace" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</RelativeLayout>
